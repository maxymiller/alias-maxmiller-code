#apt                                                                              
alias aptupnow="echo sudo apt update && sudo apt update && echo sudo apt upgrade && sudo apt upgrade"                                                               
alias apti="sudo apt install"
alias aptr="sudo apt remove"
alias aptupdate="sudo apt update"
alias aptupgrade="sudo apt upgrade"

#calc                                                                             
alias calc="bc"
                                                                                  
#cal
alias caltimenow="watch -n1 'date && cal'"                                        
alias caltimenow3="watch -n1 'date && cal -3'"
alias caltimenowy="watch -n1 'date && cal -y'"                                    

#cat                                                                              
alias cat2="batcat"
                                                                                  
#tempo
