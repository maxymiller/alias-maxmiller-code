#cd                                                                               
alias ..="cd .."
                                                                                  
#tar
alias untar="tar -xvf"                                                            
alias untargz="tar -xvzf"
alias untarbz2="tar -xvjf"                                                        
alias tarc="tar -cvf"
alias tarcgz="tar -cvzf"                                                          
alias tarcbz2="tar -cvjf"
alias tarhelp="echo untar && echo untargz && echo unzarbz2 && echo tarc && echo tarcgz && echo tarcbz2 && echo tarls && echo tarlsl"
alias tarls="tar -tf"                                                            
alias tarlsl="tar -tvf"

